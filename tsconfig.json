{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "declaration": true,
    "target": "ES2020",
    "outDir": "./dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
